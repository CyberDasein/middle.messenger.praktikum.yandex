<div class="chat-wrap {{#if isSelected }}{{ styles.chat--selected }}{{/if}}">
    {{#if unread_count }}
        <span class="unread">{{unread_count}}</span>
    {{/if}}

    <div class="user {{className}}">
    <div class="user__icon">{{avatar}}</div>
    <div class="user__text">
        <strong>{{last_message.user.first_name}}</strong>
        <span class="user-chat__time">{{last_message.time}}</span>
        <p>{{last_message.content}}</p>
    </div>
    </div>

</div>
